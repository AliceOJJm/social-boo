<ul class="nav nav-tabs">
  <li><a ng-href="/app/id{{user.id}}/friends">Friends</a></li>
  <li><a ng-href="/app/id{{user.id}}/subscribers">Subscribers</a></li>
  <li><a ng-href="/app/id{{user.id}}/new_subscribers"  ng-show = "user.id == current_user.id">New subscribers</a></li>
  <li><a ng-href="/app/id{{user.id}}/subscriptions">Subscriptions</a></li>
</ul>
<div ng-show = "subscribers.length == 0">
	<h4 align = center ng-show = "user.id == current_user.id">You have no subscribers</h4>
	<h4 align = center ng-show = "user.id != current_user.id">{{user.first_name}} has no subscribers.</h4>
</div>
<div ng-repeat="subscriber in subscribers">
	<div class="panel panel-default">
	  <div class="panel-body">
		  <div class="col-md-4">
			<user-panel user=subscriber.user></user-panel>
		  </div>
		  <div class="col-md-4" ng-show="current_user.id == user.id">
		  	<button class="button button-raised button-primary button-pill button-small" ng-click="addFriend(current_user.id, subscriber)">Receive request</button>
		  </div>                           
	  </div>
	</div>
</div>