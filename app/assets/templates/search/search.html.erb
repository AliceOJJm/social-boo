<h4 align = center>Searched for "{{searchBy.phrase}}"</h4>
<h4 align = center ng-hide="results.people.length  || results.songs.length || results.posts.length || results.videos.length">nothing found.</h4>
<div ng-show="results.people && results.people.length != 0"><h4 align = center>People:</h4></div>
<div ng-repeat="user in results.people" class="panel panel-default">
  <div class="panel-body">
	  <div class="col-md-2">
		<user-panel user=user></user-panel>
	  </div>                         
  </div>
</div>
<div ng-show="results.songs && results.songs.length != 0"><h4 align = center>Songs:</h4>
	<div class="panel panel-default">
	  <div class="panel-body">
		  <div class="player-center">  
			<div id="jquery_jplayer_2" class="jp-jplayer" style="display:none;"></div>
			<div id="jp_container_2" class="jp-audio" role="application" aria-label="media player">
			  	<div class="jp-type-playlist">
					<div class="jp-gui jp-interface">
						<div class="jp-controls">
							<button class="jp-previous" role="button" tabindex="0">previous</button>
							<button class="jp-play" role="button" tabindex="0">play</button>
							<button class="jp-pause" role="button" tabindex="0">pause</button>
							<button class="jp-next" role="button" tabindex="0">next</button>
							<button class="jp-stop" role="button" tabindex="0">stop</button>
						</div>
						<div class="jp-progress">
							<div class="jp-seek-bar">
								<div class="jp-play-bar"></div>
							</div>
						</div>
						<div class="jp-volume-controls">
							<button class="jp-mute" role="button" tabindex="0">mute</button>
							<button class="jp-volume-max" role="button" tabindex="0">max volume</button>
							<div class="jp-volume-bar">
								<div class="jp-volume-bar-value"></div>
							</div>
						</div>
						<div class="jp-time-holder">
							<div class="jp-current-time" role="timer" aria-label="time">&nbsp;</div>
							<div class="jp-duration" role="timer" aria-label="duration">&nbsp;</div>
						</div>
						<div class="jp-toggles">
							<button class="jp-repeat" role="button" tabindex="0">repeat</button>
							<button class="jp-shuffle" role="button" tabindex="0">shuffle</button>
						</div>
					</div>
					<div class="jp-playlist">
						<ul>
							<li>&nbsp;</li>
						</ul>
					</div>
					<div class="jp-no-solution">
						<span>Update Required</span>
						To play the media you will need to either update your browser to a recent version or update your <a href="http://get.adobe.com/flashplayer/" target="_blank">Flash plugin</a>.
					</div>
				</div>
			</div>
		</div>                 
	  </div>
	</div>
</div>

<div ng-show="results.videos && results.videos.length != 0"><h4 align = center>Videos:</h4></div>
<div ng-repeat="video in results.videos" class="panel panel-default">
  <div class="panel-body">
	{{ video.title || "title" }}
	<div ng-bind-html="video_tag(video.url)"></div>
	<button ng-click="addVideo(video.id)">Add to my videos</button>                  
  </div>
</div>
<div ng-show = "results.posts && results.posts.length != 0"><h4 align = center>Posts:</h4></div>
<div class="center-post" ng-repeat="post in results.posts | orderBy: '-post.updated_at'">
	<post-panel post=post></post-panel>
</div>
